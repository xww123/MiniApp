<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<!-- text相当于行内元素span -->
<text>Hello World</text>
<text>你好小程序</text>
<text>\n</text>
<text>Hello World\n</text>
<text>你好小程序\n</text>

<!-- 2.selectable： true -->
<!-- 默认情况下text中的文本长按是不能选中的 -->
<text selectable="{{ true }}">Hello Coderwhy\n</text>
<text selectable>Hello Coderwhy</text>

<!-- 3.space: 决定文本空格的大小 -->
<text>\nHello World\n</text>
<text space="nbsp">Hello World根据字体设置的空格大小\n</text>
<text space="ensp">Hello World中文字符空格一半大小\n</text>
<text space="emsp">Hello World中文字符空格大小\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text decode="{{ true }}">5 &gt; 3\n</text>
<text decode>5 &gt; 3</text>