<!-- view的基本使用 -->
<!-- view是块级元素 -->
<view class="box">哈哈哈</view>
<view>呵呵呵</view>

<!-- 2.hover-class: 当用户按下组件时，显示的样式 -->
<view class="box1" hover-start-time="3000" hover-stay-time="3000" hover-class="hover-view">box1</view>
<view>
  <text></text>
  <button>换行\n</button>
</view>

<view class="box2" hover-class="box2-hover">
  <view class="box1" 
        hover-start-time="3000" 
        hover-stay-time="3000" 
        hover-class="hover-view"
        hover-stop-propagation="{{ true }}"
        >box1</view>
</view>